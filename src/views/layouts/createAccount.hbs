<body>
    <section>
        <div class="login-wrap">
          <h1>Create new account</h1>
          <form class="forms" method="POST" action="/add-user">
          <input type="text" name="first_name" placeholder="First name" required/>
          <input type="text" name="last_name" placeholder="Last name" required/>
          <input type="email" name="email" placeholder="E-mail" required/>
          <select name="group_id" required>
            <option value="WUOE24">WUOE24</option>
            <option value="WUOE23">WUOE23</option>
          </select>
          <input type="password" placeholder="Password" id="password" required/>
          <input type="password" name="password" placeholder="Confirm password" id="confirm-password" required/>
          <button type="submit">Create Account</button>
          </form>
          </div>
    </section>
    
</body>
</html>

<script>
    let password = document.getElementById("password"),
        confirm_password = document.getElementById("confirm-password")

    function validatePassword() {
        if(password.value != confirm_password.value) {

        confirm_password.setCustomValidity("Password does not match");
        } else {
            confirm_password.setCustomValidity("");
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;
</script>