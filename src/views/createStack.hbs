<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="styles"
    />
    <title>Create project</title>
</head>
<body class="body-flex">
  {{> navigation}}
   <section class="section-secondary">
  <div class="default-div">
    <h1>Create project</h1>
    <form method="POST" action="/add-project">
      <input type="text" name="project_name" placeholder="Project name" required />
      <input type="text" name="url" placeholder="URL" required />

      <select name="group_id" required>
        <option value="WUOE24">WUOE24</option>
        <option value="WUOE23">WUOE23</option>
      </select>  

      <select name="template_id" required>
        <option value="drupla" name="Drupla">Drupla</option>
        <option value="wordpress" name="Wordpress">Wordpress</option>
        <option value="joomla" name="Joomla">Joomla</option>
        <option value="pretashop" name="Pretashop">Pretashop</option>


      </select>
      
 <!-- Disse to linjer er skjulte, da jeg gerne vil sende den data med over i poratiner, hvis vi skal bruge det senere til at hente, kan fjernes hvis ikke de skal med og ikke bruges-->
      <input type="hidden" name="groupId" value="{{user.groupId}}" />
      <input type="hidden" name="projectId" value="{{projectId}}" /> 
      
      <button type="submit">Create project</button>
    </form>
</section>
</body>
</html>

<script>
    document.addEventListener("DOMContentLoaded", () => {
    const themeToggle = document.getElementById("theme-toggle");
    const body = document.body;

    const savedTheme = localStorage.getItem("theme");
    if (savedTheme) {
        body.classList.add(savedTheme);
        themeToggle.querySelector(".icon-darklightmode").textContent = savedTheme === "dark-mode" ? "‚òÄÔ∏è" : "üåô";
    }

    themeToggle.addEventListener("click", () => {
        const isDarkMode = body.classList.toggle("dark-mode");
        themeToggle.querySelector(".icon-darklightmode").textContent = isDarkMode ? "‚òÄÔ∏è" : "üåô";

        localStorage.setItem("theme", isDarkMode ? "dark-mode" : "light-mode");
    });
});
</script>